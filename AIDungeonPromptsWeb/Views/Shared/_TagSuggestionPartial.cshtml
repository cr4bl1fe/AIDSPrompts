@using AIDungeonPrompts.Web.ColorScheme
@using AIDungeonPrompts.Application.Helpers
@if (Context.Items.TryGetValue(ItemsValueConstants.ColorPreferenceKey, out var colorPref)
    && colorPref is not null
    && (ColorSchemePreference)colorPref == ColorSchemePreference.Dark) {
    <link rel="stylesheet" href="~/css/tagsinput-fix-dark.css" asp-append-version="true"/>
}
